@model IEnumerable<TheHobbyHub.BL.Models.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model) {
    <img id="profileListImg" src="~/images/@item.Image" />
    @Html.ActionLink(item.CompanyName, "Details", new { id = item.Id })
    <hr />
}
