@model IEnumerable<TheHobbyHub.BL.Models.Company>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Click on the card of the company you would like to learn more about!</h3>

<div class="event-card-list" id="event-card-list">
    @foreach (var item in Model)
    {
        <article class="event-body">
            <a class="event-link" href="@Url.Action("Details", new { id = item.Id })">
                <!-- Change to go see details -->
                <div class='cardf'>
                    @* <div class="banner">
                <img class="banner-img" src="/images/@item.ImagePath">
                </div> *@

                    <div class="card-profilef">
                        <img class="pimgf" src="/images/@item.ImagePath" alt='person'>
                        <div class="card-profile-info">
                            <h3 class="profile-namef">@Html.DisplayFor(modelItem => item.CompanyName)</h3>
                            <p class="followersf">90.5K Followers</p>
                        </div>
                    </div>

                    <div class="card-bodyf">
                        <p>
                            Here Goes the description of your company! Tell users about you and your business and what set you apart from others!
                        </p>
                        <br />
                        <p>
                            Click Me to find out more about us!
                        </p>
                    </div>


                </div>
            </a>


        </article>
    }
</div>
