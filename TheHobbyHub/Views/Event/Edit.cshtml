@model TheHobbyHub.UI.ViewModels.EventVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row m-2">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Event.EventName" class="control-label"></label>
                <input asp-for="Event.EventName" class="form-control" />
                <span asp-validation-for="Event.EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventHobbies" class="control-label"></label>
                <select asp-for="HobbyIds"
                        class="form-control"
                        multiple
                        asp-items="@(new MultiSelectList(Model.Hobbies, "Id", "HobbyName"))" /></select>
                <span asp-validation-for="Event.EventHobbies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Description" class="control-label"></label>
                <input asp-for="Event.Description" class="form-control" />
                <span asp-validation-for="Event.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventPostalAddress" class="control-label"></label>
                <input asp-for="Event.EventPostalAddress" class="form-control" />
                <span asp-validation-for="Event.EventPostalAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventCity" class="control-label"></label>
                <input asp-for="Event.EventCity" class="form-control" />
                <span asp-validation-for="Event.EventCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventState" class="control-label"></label>
                <input asp-for="Event.EventState" class="form-control" />
                <span asp-validation-for="Event.EventState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventZip" class="control-label"></label>
                <input asp-for="Event.EventZip" class="form-control" />
                <span asp-validation-for="Event.EventZip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.Date" class="control-label"></label>
                <input asp-for="Event.Date" class="form-control" />
                <span asp-validation-for="Event.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.EventUser" class="control-label"></label>
                <input asp-for="Event.EventUser" class="form-control" />
                <span asp-validation-for="Event.EventUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Event.ImagePath" class="control-label"></label>
                <input asp-for="Event.ImagePath" class="form-control" />
                <span asp-validation-for="Event.ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
